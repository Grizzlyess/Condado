<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@styles/condado.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.condadofx.condado.controllers.ProcurarClienteController">
   <children>
      <Pane prefHeight="600.0" prefWidth="800.0">
         <children>
            <BorderPane prefHeight="50.0" prefWidth="800.0" styleClass="condado_border_container">
               <center>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="condado_text_container" text="Procurar Cliente" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
               </center>
            </BorderPane>
            <VBox layoutX="257.0" layoutY="80.0" prefWidth="287.0" spacing="5.0" styleClass="condado_form_container">
               <children>
                  <Label text="Cliente:" />
                  <ComboBox fx:id="idCliente" prefWidth="287.0" promptText="Cliente" />
                  <Label text="Nome:" />
                  <TextField fx:id="nome" promptText="nome" />
                  <Label text="Data de Nascimento:" />
                  <TextField fx:id="dataNascimento" promptText="data de nascimento" />
                  <Label text="Email:" />
                  <TextField fx:id="email" promptText="email" />
                  <Label text="Contato:" />
                  <TextField fx:id="contato" promptText="contato" />
               </children>
            </VBox>
            <HBox layoutX="257.0" layoutY="427.0" prefWidth="287.0" spacing="45.0">
               <children>
                  <Button fx:id="atualizar" mnemonicParsing="false" onAction="#onAtualizarClick" text="Atualizar" />
                  <Button fx:id="buscar" mnemonicParsing="false" onAction="#onBuscarClick" text="Buscar" />
                  <Button fx:id="deletar" mnemonicParsing="false" onAction="#onDeletarClick" text="Deletar" />
               </children>
            </HBox>
         </children>
      </Pane>
   </children>
</AnchorPane>
